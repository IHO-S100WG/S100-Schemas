<?xml version="1.0" encoding="UTF-8"?>

<!-- S-101 ALERT CATALOGUE -->
<alertCatalog version="0.1">

    <messages>
		<!-- Begin messages triggered by an alert for display in alert management or route plan -->
        <message id="CrossingSafetyContourMsg" icon="CrossingSafetyContourIcon">
            <description>
                <name>Crossing Safety Contour Msg</name>
                <description>Crossing the safety contour</description>
                <language>eng</language>
            </description>
            <text>Crossing safety contour</text>
			<text language="kor">안전 구분선 횡단</text>
        </message>
        <message id="CrossingProhAreMsg" icon="CrossingProhAreIcon">
            <description>
                <name>Crossing Proh Are Msg</name>
                <description>Crossing a prohibited area or area for which special conditions exist.</description>
                <language>eng</language>
            </description>
            <text>Crossing prohibited or special conditions area</text>
			<text language="kor">금지 또는 특별한 상황 지역 횡단</text>
        </message>
        <message id="CrossingNavHazardsMsg" icon="CrossingNavHazardsIcon">
            <description>
                <name>Crossing Nav Hazards Msg</name>
                <description>Crossing a navigational hazard</description>
                <language>eng</language>
            </description>
            <text>Crossing navigational hazard</text>
			<text language="kor">항해 위험 횡단</text>
        </message>
		<!-- End messages triggered by an alert -->
		
		<!-- Begin messages triggered by disabling graphical highlight -->
        <message id="SafetyContourHighlightOffMsg">
            <description>
                <name>Safety Contour Highlight Off Msg</name>
                <description>Graphical highlighting is disabled for alerts generated by the safety contour</description>
                <language>eng</language>
            </description>
            <text>Indication of crossing safety contour is Off</text>
			<text language="kor">안전 윤곽선 횡단 표시가 꺼짐</text>
        </message>
        <message id="ProhAreHighlightOffMsg">
            <description>
                <name>Proh Are Highlight Off Msg</name>
                <description>Graphical highlighting is disabled for alerts generated by one or more types of prohibited areas / areas with special conditions</description>
                <language>eng</language>
            </description>
            <text>ProhAre</text>
        </message>
        <message id="NavHazardsHighlightOffMsg">
            <description>
                <name>Nav Hazards Highlight Off Msg</name>
                <description>Graphical highlighting is disabled for alerts generated by navigation hazards</description>
                <language>eng</language>
            </description>
            <text>Indication of navigational hazards is Off</text>
			<text language="kor">항해 위험 표시가 꺼짐</text>
        </message>
		<!-- End messages triggered by disabling graphical highlight -->
		
		<!-- Begin messages used as labels on UI components -->
        <message id="ProhArePriorityLbl">
            <description>
                <name>Proh Are Priority Lbl</name>
                <description>Label for the UI component allowing selection of the alert priority for prohibited areas / areas with special conditions</description>
                <language>eng</language>
            </description>
            <text>ProhAre Alert Priority</text>
			<text language="kor">금지 구역 경보 우선 순위</text>
        </message>
        <message id="NavHazardsPriorityLbl">
            <description>
                <name>Nav Hazards Priority Lbl</name>
                <description>Label for the UI component allowing selection of the alert priority for navigational hazards</description>
                <language>eng</language>
            </description>
            <text>Nav Hazards Alert Priority</text>
			<text language="kor">항해 위험 경고 우선 순위</text>
        </message>
		<!-- End messages used as labels on UI components -->
    </messages>
	
	<highlights>
		<highlight id="SafetyContourHighlight" optional="true" msg="SafetyContourHighlightOffMsg">
            <description>
                <name>Safety Contour Highlight</name>
                <description>Used to turn on or off the graphical highlighting of alerts triggered by the safety contour.</description>
                <language>eng</language>
            </description>
			<viewingGroup ref="101"/>
		</highlight>
		<!-- TODO: Determine if optional attribute should be true. IEC 61174 does not indicate disabling highlight is optional. -->
		<highlight id="ProhAreHighlight" msg="ProhAreHighlightOffMsg">
            <description>
                <name>Proh Are Highlight</name>
                <description>Used to turn on or off the graphical highlighting of alerts triggered by prohibited areas or areas with special conditions.</description>
                <language>eng</language>
            </description>
			<!-- Viewing groups used to control the alert highlights
				ViewingGroup: Feature
				2: Traffic separation zone
				3: Inshore traffic zone
				4: Restricted area
				5: Caution area
				6: Offshore production area
				7: Areas to be avoided
				8: User defined areas to be avoided
				9: Military practice area
				10: Seaplane landing area
				11: Submarine transit lane
				12: Anchorage area
				13: Marine farm/aquaculture
				14: PSSA (Particularly Sensitive Sea Area)
			-->
			<viewingGroup ref="102"/>
			<viewingGroup ref="103"/>
			<viewingGroup ref="104"/>
			<viewingGroup ref="105"/>
			<viewingGroup ref="106"/>
			<viewingGroup ref="107"/>
			<viewingGroup ref="108"/>
			<viewingGroup ref="109"/>
			<viewingGroup ref="110"/>
			<viewingGroup ref="111"/>
			<viewingGroup ref="112"/>
			<viewingGroup ref="113"/>
			<viewingGroup ref="114"/>
		</highlight>
		<highlight id="NavHazardsHighlight" optional="true" msg="NavHazardsHighlightOffMsg">
            <description>
                <name>Nav Hazards Highlight</name>
                <description>Used to turn on or off the graphical highlighting of alerts triggered by navigational hazards.</description>
                <language>eng</language>
            </description>
			<viewingGroup ref="115"/>
		</highlight>
	</highlights>
	
    <alerts>
        <alert id="SafetyContour">
            <description>
                <name>Safety contour</name>
                <description>IEC 61174:2015 4.10.2.1, 4.10.3 (232/A11.3.4, 232/A11.4.3)</description>
                <language>eng</language>
            </description>
            <routeMonitor msg="CrossingSafetyContourMsg" highlight="SafetyContourHighlight">
                <priority>Alarm</priority>
            </routeMonitor>
            <routePlan msg="CrossingSafetyContourMsg" highlight="SafetyContourHighlight">
                <priority>Indication</priority>
            </routePlan>
        </alert>
        <alert id="ProhAre">
            <description>
                <name>Prohibited areas</name>
                <description>Alert for prohibited areas or geographic areas for which special conditions exist. See IEC 61174:2015 4.10.2.1, 4.10.3 (MSC.232/A11.3.5, MSC.232/A11.4.4)</description>
                <language>eng</language>
            </description>
            <routeMonitor msg="CrossingProhAreMsg" highlight="ProhAreHighlight">
				<!-- TODO: IEC 61174 specifies Warning or Caution everywhere except Annex C, which specifies Warning or Indication. -->
				<priorities label="ProhArePriorityLbl">
					<priority default="true">Caution</priority>
					<priority>Warning</priority>
				</priorities>
            </routeMonitor>
            <routePlan msg="CrossingProhAreMsg" highlight="ProhAreHighlight">
                <priority>Indication</priority>
            </routePlan>
        </alert>
		<alert id="NavHazard">
			<description>
                <name>Navigation hazards</name>
                <description>Alert for passing close to a danger (e.g. obstruction, wreck, rock) or an aid to navigation. See IEC 61174:2015 4.10.2.1, 4.10.3 (MSC.232/A11.3.5, MSC.232/A11.4.6)</description>
                <language>eng</language>
            </description>
            <routeMonitor msg="CrossingNavHazardsMsg" highlight="NavHazardsHighlight">
				<priorities label="NavHazardsPriorityLbl">
					<priority default="true">Caution</priority>
					<priority optional="true">Warning</priority>
				</priorities>
            </routeMonitor>
            <routePlan msg="CrossingNavHazardsMsg" highlight="NavHazardsHighlight">
                <priority>Indication</priority>
            </routePlan>
		</alert>
    </alerts>
</alertCatalog>